<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="top attached">
		<div class="item">
			<!-- Add image to page with semantic stylings -->
			<img class="ui centered rounded image" src="<%= blog.image %>">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
			<a class="ui inverted blue button" href="/blogs/<%= blog._id %>/edit">Edit Blog</a>
			<!-- Create button using methodOverride (?_method=DELETE)-->
			<form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
				<button class="ui red inverted button">Delete</button>
			</form>
		</div>
	</div>
</div>

<% include ./partials/footer %>